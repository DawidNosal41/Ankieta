@model Ankieta.Models.Uzytkownik

@{
    ViewData["Title"] = "Edit";
}

<center>
<h4>Edycja użytkownika</h4>
<br />

<div style="text-align: center" class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UzytkownikUserId" class="control-label"></label>
                <select asp-for="UzytkownikUserId" class="form-control" asp-items="ViewBag.UzytkownikUserId"></select>
                <span asp-validation-for="UzytkownikUserId" class="text-danger"></span>
            </div>
            </br>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Zapisz"/> 
                <button type="button" class="btn btn-danger"><a style="text-decoration: none; color: white" asp-action="Index">Powrót</a></button>
            </div>
        </form>
    </div>
</div>
</center>

