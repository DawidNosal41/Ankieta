@model Ankieta.Models.Pytanie

@{
    ViewData["Title"] = "Create";
}

<body style="color: black" class="tlo">
    <center>
<h4>Dodaj nowe pytanie</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tresc" class="control-label"></label>
                <input asp-for="Tresc" class="form-control" />
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypPytania" class="control-label"></label>
                <input asp-for="TypPytania" class="form-control" />
                <span asp-validation-for="TypPytania" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnkietaSzkolnaId" class="control-label"></label>
                <select asp-for="AnkietaSzkolnaId" class ="form-control" asp-items="ViewBag.AnkietaSzkolnaId"></select>
            </div>
                <div class="form-group">
                    <input type="submit" value="Utwórz" class="btn btn-success" />
                    <button type="button" class="btn btn-danger"><a style="text-decoration: none; color: white" asp-action="Index">Powrót</a></button>
                </div>
        </form>
    </div>
</div>
</center>
</body>
