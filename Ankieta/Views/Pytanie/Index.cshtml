@model IEnumerable<Ankieta.Models.Pytanie>

@{
    ViewData["Title"] = "Index";
}

<body style="color: black; text-align:center" class="tlo">

    <h1>Pytania</h1>

    <p>
        <button type="button" class="btn btn-dark"><a style="text-decoration: none; color: white" asp-action="Create">Utworz nowe pytanie</a></button>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tresc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypPytania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnkietaSzkolna)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypPytania)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnkietaSzkolna.Name)
            </td>
            <td>
                    <li class="nav-item">
                        <a type="button" class="btn btn-success" asp-area="" asp-controller="OdpowiedzUzytkownika" asp-action="Index">Zaznacz swoją odpowiedź</a>
                    </li>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
