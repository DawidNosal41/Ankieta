@model Ankieta.Models.OdpowiedzUzytkownika

@{
    ViewData["Title"] = "Delete";
}

<body style="color: black" class="tlo">
<center>

<h3>Jesteś pewny, że chcesz to usunąć?</h3>
</center>
<div>
    <h4>OdpowiedzUzytkownika</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pytanie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pytanie.Tresc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Odpowiedz)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Odpowiedz.Tresc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Uzytkownik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uzytkownik.Name)
        </dd>
    </dl>

        <form style="text-align:center" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Usuń" class="btn btn-danger" /> |
            <button type="button" class="btn btn-danger"><a style="text-decoration: none; color: white" asp-action="Index">Powrót</a></button>
        </form>
</div>
</body>
