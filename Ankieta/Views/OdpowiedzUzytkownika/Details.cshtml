@model Ankieta.Models.OdpowiedzUzytkownika

@{
    ViewData["Title"] = "Details";
}


<body style="color: black" class="tlo">

<div>
    <h4 style="text-align: center">Odpowiedź uzytkownika</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pytanie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pytanie.Tresc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Odpowiedz)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Odpowiedz.Tresc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Uzytkownik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uzytkownik.Name)
        </dd>
    </dl>
</div>
<div>
        <center>
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> |
            <a class="btn btn-danger" asp-action="Index">Powrót</a>
        </center>
</div>
</body>