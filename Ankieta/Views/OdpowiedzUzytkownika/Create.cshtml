@model Ankieta.Models.OdpowiedzUzytkownika

@{
    ViewData["Title"] = "Create";
}

<body style="color: black" class="tlo">
    <center>

        <h4>Odpowiedź Uzytkownika</h4>

    </center>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PytanieId" class="control-label"></label>
                <select asp-for="PytanieId" class ="form-control" asp-items="ViewBag.PytanieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OdpowiedzId" class="control-label"></label>
                <select asp-for="OdpowiedzId" class ="form-control" asp-items="ViewBag.OdpowiedzId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UzytkownikId" class="control-label"></label>
                <select asp-for="UzytkownikId" class ="form-control" asp-items="ViewBag.UzytkownikId"></select>
            </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <button type="button" class="btn btn-danger"><a style="text-decoration: none; color: white" asp-action="Index">Powrót</a></button>
                </div>
        </form>
    </div>
</div>
</body>



