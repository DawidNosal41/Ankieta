@model Ankieta.Models.AnkietaSzkolna

@{
    ViewData["Title"] = "Create";
}

<body style="color: black" class="tlo">
    <center>
<h4>Utwórz nową ankietę</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartData" class="control-label"></label>
                <input asp-for="StartData" class="form-control" />
                <span asp-validation-for="StartData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndData" class="control-label"></label>
                <input asp-for="EndData" class="form-control" />
                <span asp-validation-for="EndData" class="text-danger"></span>
            </div>
            </br>
                    <div class="form-group">
                        <input type="submit" value="Dodaj" class="btn btn-success" />
                        <button type="button" class="btn btn-danger"><a style="text-decoration: none; color: white" asp-action="Index">Powrót</a></button>
                    </div>
        </form>
    </div>
</div>
</center>
</body>


